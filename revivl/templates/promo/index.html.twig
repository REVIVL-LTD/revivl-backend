{% extends 'base.html.twig' %}

{% block title %}Promo index{% endblock %}

{% block body %}
    <h1>Promo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Codes quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.id }}</td>
                <td>{{ promo.name }}</td>
                <td>{{ promo.statusName }}</td>
                <td>{{ promo.promocodes|length }}</td>
                <td>
                    <a href="{{ path('lk_admin_promo_show', {'id': promo.id}) }}">show</a>
                    <a href="{{ path('lk_admin_promo_edit', {'id': promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lk_admin_promo_new') }}">Create new</a>
{% endblock %}
